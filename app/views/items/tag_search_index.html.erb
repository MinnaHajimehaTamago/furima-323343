<%= render 'shared/second-header' %>
<div class="search-main">
  <div class="form-wrap">
    <div class="form-group">
      <h1>
        商品検索
      </h1>
      <%= search_form_for @p, url: tag_search_result_items_path do |f| %>
        <div class="search-title">
          <%= f.label :tags_id_in, '商品タグ' %>
        </div>
        <%= f.collection_select :tags_id_in, @tags, :id, :tag_name, include_blank: '指定なし' %>
        <%= f.submit '検索', class: "search-btn" %>   
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/second-footer' %>